{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-underscore-dangle": ["error", { "allow": ["_id", "_create"] }]
    },
    "globals": { "_": true, "isNaN": true }
}
